@page
@model ListModel
@{
    ViewData["Title"] = "List blog posts";
}
<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>List blog posts</h1>
    </div>
</div>
<div>
    <div class="container">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Heading</th>
                    <th>Author</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.BlogPosts)
                {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Heading</td>
                    <td>@item.Author</td>
                    <td><a href="Edit/@item.Id">Edit</a> | <a href="Delete/@item.Id">Delete</a></td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>